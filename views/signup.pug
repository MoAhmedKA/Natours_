block content
     main.main
            .form--signup
                h2.heading-secondary.ma-bt-lg create  your natours account
                form.form.form--sginup
                    .form__group
                            label.form__label(for='name') name
                            input#name.form__input(type='name', placeholder='joseAhmed', required)
                    .form__group
                        label.form__label(for='email') Email address
                        input#email.form__input(type='email', placeholder='you@example.com', required)
